{
  "name": "chartjs-web-components",
  "version": "2.7.0",
  "flat": true,
  "contributors": [
    "fsx950223"
  ],
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS && npm run lint"
    }
  },
  "main": "dist/base.js",
  "unpkg": "dist/base.js",
  "license": "MIT",
  "repository": "fsx950223/chartjs-web-components",
  "scripts": {
    "start": "TS_NODE_PROJECT=\"tsconfig-for-webpack-config.json\" webpack-dev-server --config config/development.config.ts --open",
    "build": "TS_NODE_PROJECT=\"tsconfig-for-webpack-config.json\" webpack --config config/production.config.ts",
    "prepublish": "npm run lint && npm run build",
    "lint": "eslint . --ext .ts --fix"
  },
  "keywords": [
    "web-components",
    "html",
    "chart.js",
    "lit-element",
    "typescript"
  ],
  "devDependencies": {
    "@commitlint/cli": "^7.5.2",
    "@commitlint/config-conventional": "^7.5.0",
    "lit-element": "2.1.0",
    "@types/chart.js": "^2.7.49",
    "@types/node": "^11.11.5",
    "@types/webpack": "^4.4.26",
    "@typescript-eslint/eslint-plugin": "^4.16.1",
    "@typescript-eslint/eslint-plugin-tslint": "^4.16.1",
    "@typescript-eslint/parser": "^4.16.1",
    "chart.js": "^2.8.0",
    "clean-webpack-plugin": "^2.0.1",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^1.3.1",
    "eslint": "^7.21.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsdoc": "^32.2.0",
    "eslint-plugin-no-null": "^1.0.2",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-unicorn": "^28.0.2",
    "minify-lit-html-loader": "0.0.3",
    "ts-loader": "^5.3.3",
    "ts-node": "^8.0.3",
    "tsconfig-paths": "^3.8.0",
    "typescript": "^3.3.4000",
    "typescript-lit-html-plugin": "^0.9.0",
    "webpack": "^4.29.6",
    "webpack-bundle-analyzer": "^3.1.0",
    "webpack-cli": "^3.3.0",
    "webpack-dev-server": "^3.2.1",
    "webpack-node-externals": "^1.7.2"
  },
  "peerDependencies": {
    "chart.js": "^2.8.0",
    "lit-element": "2.1.0"
  }
}
